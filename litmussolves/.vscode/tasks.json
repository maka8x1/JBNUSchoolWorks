{
    "version": "2.0.0",
    "tasks": [
     {
        "type": "shell",
        "label": "C/C++: gcc build active file",
        "command": "/usr/bin/g++",
        "args": [
           "-g",
           "${file}",
           "-o",
           "${fileDirname}/bin/${fileBasenameNoExtension}",
           "-lm"
        ],
        "options": {
           "cwd": "/usr/bin"
        },
        "problemMatcher": [
           "$gcc"
        ],
        "group": "build",
        "detail": "Task generated by Debugger."
     },
     {
        "type": "shell",
        "label": "C/C++: run compiled active file",
        "command": "${fileDirname}/bin/${fileBasenameNoExtension}",
  
        "group": "build",
        "detail": "Task not generated by Debugger"
     },
     {
         "type": "shell",
         "label": "C/C++: clear compiled binary",
         "command": "rm -f ${fileDirname}/bin/*",

         "group": "build",
         "detail": "Task not generated by Debugger"
     }
     ]
  }